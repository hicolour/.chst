pacman =|= basics   =|= pacman -Q                                   =|= Searching locally                                     =|= type
pacman =|= basics   =|= sudo pacman -S [$pkg]                       =|= Install pkg                                           =|= input+type
pacman =|= basics   =|= sudo pacman -R [$pkg]                       =|= Remove pkg                                            =|= input+type

pacman =|= remove   =|= sudo pacman -Rs [$pkg]                      =|= Remove pkg with its dependencies                      =|= input+type
pacman =|= remove   =|= sudo pacman -Rns [$pkg]                     =|= Remove pkg with its dependencies & sys config files     =|= input+type

pacman =|= update   =|= sudo pacman -Syu                            =|= Synchronize & update pkgs                             =|= type
pacman =|= update   =|= sudo pacman -Syu                            =|= Force synchronize & update pkgs                       =|= type
pacman =|= update   =|= sudo pacman -Syuw                           =|= Synchronize & download pkgs                           =|= type
pacman =|= update   =|= sudo pacman -Sy                             =|= Synchronize repositories                              =|= type
pacman =|= update   =|= sudo pacman -Sy                             =|= Update pkgs                                           =|= type

pacman =|= search   =|= pacman -Ss [$pkg]                           =|= Search pkg on remote repositories                     =|= input+type
pacman =|= search   =|= pacman -Qs [$pkg]                           =|= Search pkg on local repository                        =|= input+type

pacman =|= list     =|= pacman -Q                                   =|= List installed pkgs                                   =|= type
pacman =|= list     =|= pacman -Qe                                  =|= List explecitly installed pkgs                        =|= type
pacman =|= list     =|= pacman -Qq                                  =|= List installed pkgs without version number            =|= type
pacman =|= list     =|= pacman -Qn                                  =|= List installed pkgs from main repositories            =|= type
pacman =|= list     =|= pacman -Qm                                  =|= List installed pkgs from aur repositories             =|= type
pacman =|= list     =|= pacman -Qdt                                 =|= List orphans / unneeded                               =|= type
